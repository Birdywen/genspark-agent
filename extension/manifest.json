{
  "manifest_version": 3,
  "name": "Genspark Agent Bridge",
  "version": "1.0.41",
  "description": "将 Genspark 聊天窗口转变为 AI Agent 运行时",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.genspark.ai/*",
    "https://*.google.com/*",
    "https://*.github.com/*",
    "https://*.stackoverflow.com/*",
    "https://*.youtube.com/*",
    "https://*.wikipedia.org/*",
    "https://*.amazon.com/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://*.reddit.com/*",
    "https://*.openai.com/*",
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://*.anthropic.com/*",
    "https://*.cloudflare.com/*",
    "https://*.vercel.app/*",
    "https://*.netlify.app/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://wim.vree.org/js/*",
    "https://hix.ai/*",
    "https://*.hix.ai/*",
    "https://agent.opus.pro/*",
    "https://*.opus.pro/*",
    "https://flow.viasocket.com/*",
    "https://*.viasocket.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.genspark.ai/agents*"],
      "js": ["video-generator.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel-enhancer.js", "video-generator.js"],
      "matches": ["https://www.genspark.ai/*"]
    }
  ]
}