{
  "manifest_version": 3,
  "name": "Genspark Agent Bridge",
  "version": "1.0.41",
  "description": "将 Genspark 聊天窗口转变为 AI Agent 运行时",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "clipboardWrite",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.genspark.ai/*",
    "https://*.google.com/*",
    "https://*.github.com/*",
    "https://*.youtube.com/*",
    "https://*.wikipedia.org/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://*.openai.com/*",
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://*.anthropic.com/*",
    "https://*.cloudflare.com/*",
    "https://*.vercel.app/*",
    "https://*.netlify.app/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://wim.vree.org/js/*",
    "https://hix.ai/*",
    "https://*.hix.ai/*",
    "https://agent.opus.pro/*",
    "https://*.opus.pro/*",
    "https://flow.viasocket.com/*",
    "https://*.viasocket.com/*",
    "https://take-a-piano-sheet-music-break.com/*",
    "https://*.newzik.com/*",
    "https://app.getodin.ai/*",
    "https://*.getodin.ai/*",
    "https://audiocleaner.ai/*",
    "https://*.audiocleaner.ai/*",
    "https://galaxy.ai/*",
    "https://*.galaxy.ai/*",
    "https://www.arrangeme.com/*",
    "https://*.arrangeme.com/*",
    "https://app.cochat.ai/*",
    "https://*.cochat.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.genspark.ai/agents*"
      ],
      "js": [
        "sse-hook.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://www.genspark.ai/agents*"
      ],
      "js": [
        "video-generator.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "panel-enhancer.js",
        "video-generator.js",
        "sse-hook.js"
      ],
      "matches": [
        "https://www.genspark.ai/*"
      ]
    }
  ]
}