{
  "manifest_version": 3,
  "name": "Kimi AI Agent Bridge",
  "version": "1.0.0",
  "description": "将 Kimi AI 聊天窗口转变为 AI Agent 运行时",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://kimi.moonshot.cn/*",
    "https://kimi.com/*",
    "https://www.kimi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://kimi.moonshot.cn/*", "https://kimi.com/*", "https://www.kimi.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}