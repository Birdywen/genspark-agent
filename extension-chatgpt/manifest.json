{
  "manifest_version": 3,
  "name": "ChatGPT Agent Bridge",
  "version": "1.0.0",
  "description": "将 ChatGPT 聊天窗口转变为 AI Agent 运行时",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://*.openai.com/*",
    "https://*.google.com/*",
    "https://*.github.com/*",
    "https://*.youtube.com/*",
    "https://*.wikipedia.org/*",
    "https://*.amazon.com/*",
    "https://*.reddit.com/*",
    "https://*.vercel.app/*",
    "https://*.netlify.app/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://*.opus.pro/*",
    "https://*.viasocket.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel-enhancer.js"],
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
    }
  ]
}