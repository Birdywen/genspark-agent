{
  "server": {
    "port": 8765,
    "host": "localhost"
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/yay/workspace", "/private/tmp"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    },
    "shell": {
      "command": "npx",
      "args": ["-y", "mcp-server-commands"]
    }
  },
  "safety": {
    "allowedPaths": [
      "/Users/yay/workspace",
      "/Users/yay/Documents",
      "/Users/yay/Downloads",
      "/Users/yay/Desktop",
      "/tmp",
      "/private/tmp"
    ],
    "blockedCommands": [
      "rm -rf /",
      "rm -rf ~",
      "rm -rf .",
      "rm -rf *",
      "sudo rm",
      "sudo su",
      "chmod 777",
      "chmod -R 777",
      "chown root",
      "mkfs",
      "dd if=",
      "shutdown",
      "reboot",
      "halt",
      "init 0",
      "init 6",
      "> /etc",
      "> /usr",
      "> /System",
      ":(){:|:&};:",
      "curl | sh",
      "curl | bash",
      "wget | sh",
      "wget | bash"
    ],
    "allowedCommands": [
      "ls", "cat", "head", "tail", "echo", "pwd", "date", "whoami", "which",
      "grep", "sed", "awk", "find", "wc", "sort", "uniq", "cut", "diff",
      "python", "python3", "node", "npm", "npx",
      "curl", "wget", "git",
      "mkdir", "touch", "cp", "mv", "rm",
      "tar", "zip", "unzip",
      "open", "pbcopy", "pbpaste", "code",
      "ffmpeg", "ffprobe",
      "pandoc",
      "bash", "sh", "zsh",
      "uname", "sw_vers", "system_profiler",
      "chmod", "jq", "docker", "brew"
    ],
    "dangerousOperations": [
      "write_file",
      "delete_file",
      "move_file"
    ],
    "requireConfirmation": false
  },
  "logging": {
    "enabled": true,
    "file": "./logs/agent.log",
    "console": true
  }
}
