{
  "server": {
    "port": 8765,
    "host": "localhost"
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/yay/workspace",
        "/private/tmp"
      ]
    },
    "shell": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-commands"
      ]
    },
    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "@kazuph/mcp-fetch"
      ]
    }
  },
  "safety": {
    "allowedPaths": [
      "/Users/yay/workspace",
      "/Users/yay/Documents",
      "/Users/yay/Downloads",
      "/Users/yay/Desktop",
      "/tmp",
      "/private/tmp"
    ],
    "blockedCommands": [
      "rm -rf /",
      "rm -rf ~",
      "rm -rf .",
      "rm -rf *",
      "sudo rm",
      "sudo su",
      "chmod 777",
      "chmod -R 777",
      "chown root",
      "mkfs",
      "dd if=",
      "shutdown",
      "reboot",
      "halt",
      "init 0",
      "init 6",
      "> /etc",
      "> /usr",
      "> /System",
      ":(){:|:&};:",
      "curl | sh",
      "curl | bash",
      "wget | sh",
      "wget | bash"
    ],
    "allowedCommands": [
      "cd","ls","cat","rg","fd","bat","eza","http","sqlite3",
      "wkhtmltopdf","magick","identify","convert","file","du","df",
      "tree","env","xargs","tee","realpath","dirname","basename",
      "&&","head","tail","echo","pwd","date","whoami","which",
      "grep","sed","awk","find","wc","sort","uniq","cut","diff",
      "python","python3","node","npm","npx","curl","wget","git",
      "mkdir","touch","cp","mv","rm","tar","zip","unzip","open",
      "pbcopy","pbpaste","code","ffmpeg","ffprobe","pandoc",
      "bash","sh","zsh","uname","sw_vers","system_profiler",
      "chmod","jq","docker","brew","osascript","nohup","sleep",
      "killall","pkill","kill","ps","lsof","scp","rsync",
      "for","while","if","test","[","time","seq","top",
      "sysctl","uptime","htop","vm_stat","iostat","netstat",
      "vmstat","iotop","afplay","ffplay","say",
      "musicxml2ly","abc2ly","abc2midi","xml2abc","lilypond"
    ],
    "dangerousOperations": [
      "write_file",
      "delete_file",
      "move_file"
    ],
    "requireConfirmation": false
  },
  "logging": {
    "enabled": true,
    "file": "./logs/agent.log",
    "console": true
  }
}